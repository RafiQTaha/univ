<div class="modal" role="dialog" id="ajouterPriseEnCharge_modal" aria-modal="true"> 
<div class="modal-dialog modal-md" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Ajouter Prise En Charge</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"> 
        <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        {# <div class="alert alert-info">Veuillez selectionner un ligne Pour Continuer Cette opération !!</div> #}
          <form action="" class="form-ajouter_pcharge">
            <div class="organisme">
              <label for="organisme">organisme:</label>
              <select class="form-control" name="organisme" id="organisme">
                    <option value="">Choix Organisme</option>
                    {% for organisme in organismes %}
                        <option value="{{organisme.id}}">{{organisme.designation}}</option>
                    {% endfor %} 
              </select>
            </div>
              <label for="code-pec">Code Pec (*):</label>
              <input type="text" class="form-control" id='code-pec' name="cpec" placeholder="CHR_123456">

              <label for="montant">Montant (*):</label>
              <input type="number" class="form-control" id='montant' name="montant" min="0">
            
            <div class="d-flex mt-5 mb-5">
              {# <button class="btn btn-primary ml-auto">G.Preinscription</button> #}
              <button type="submit" class="btn btn-success ml-auto" id="enregistrer"> <i class="fas fa-check-circle"></i> Enregistrer</button>
            </div>
          </form>
          <table id="datables_social_modal" class="table table-striped mt-3" style="width:100%">
            <thead>
              <tr>
                <th>CODE</th>
                <th>NOM</th>
                <th>ETAB</th>
                <th>FORM</th>
                <th>C-PEC</th>
                <th>MONTANT</th>
                <th>ORG</th>
              </tr>
          </thead>
          <tbody>
              
          </tbody>
          <tfoot>
              <tr>
                <th>CODE</th>
                <th>NOM</th>
                <th>ETAB</th>
                <th>FORM</th>
                <th>C-PEC</th>
                <th>MONTANT</th>
                <th>ORG</th>
              </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>