<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">

<style type="text/Css">
    body{
        font-family: 'Source Sans Pro', sans-serif;
    }
    .slh tr td {
        border-bottom: 1px solid #292929;
        line-height: .5;
    }
</style>
<br>
{% set color = "background-color: #dddd4f;color:#000;" %}

<table align="center" style=" background: #FFFFFF;font-size: 11px" cellspacing="0" class="slh">
    <thead>
        <tr style="background-color: #bfbfbf;font-size: 9px;text-align: center">
            <th style="width:50px;text-align: center;padding: 8px; font-weight: 600">RANG</th>
            <th style="width:150px;text-align: left;font-weight: 400">CODE CANDIDAT</th>
            <th style="width:180px; text-align: left;font-weight: 600">NOM</th>
            <th style="width:180px;text-align: left;font-weight: 600">PRENOM</th>
            <th style="width:80px;text-align: left;font-weight: 600">TYPE BAC</th>
            <th style="width:80;text-align: left;font-weight: 600">CIN/PASS</th>
            <th style="width:80;text-align: left;font-weight: 600">MOYENNE BAC</th>
            <th style="width:120px; {{color}} text-align: center;font-weight: 800">{{etab}}</th>
        </tr>
    </thead>
    <tbody>
        {% for ConcoursEvaluation in ConcoursEvaluations %}
            <tr style="font-size: 9px;padding: 5px ;">
                <td style="width:50px;text-align: center;padding: 8px; font-weight: 600">
                    {% if etab == "ISITS" %}
                        {{ConcoursEvaluation.RangISITS}}
                    {% elseif etab == "FASIMH" %}
                        {{ConcoursEvaluation.RangFASIMH}}
                    {% endif %}
                </td>
                <td style="width:150px;text-align: left;font-weight: 400">{{ConcoursEvaluation.etudiant.code}}</td>
                <td style="width:180px; text-align: left;font-weight: 600">{{ConcoursEvaluation.etudiant.nom}}</td>
                <td style="width:180px;text-align: left;font-weight: 600">{{ConcoursEvaluation.etudiant.prenom}}</td>
                <td style="width:80px;text-align: left;font-weight: 600">
                    {% if ConcoursEvaluation.etudiant.typeBac %}{{ConcoursEvaluation.etudiant.typeBac.designation}}{% endif %}
                </td>
                <td style="width:80;text-align: left;font-weight: 600">
                    {% if ConcoursEvaluation.etudiant.cin == "" %}
                            {{ConcoursEvaluation.etudiant.passeport}}
                    {% else %}
                            {{ConcoursEvaluation.etudiant.cin}}
                    {% endif %}
                </td>
                <td style="width:80;text-align: center;font-weight: 600">{{ConcoursEvaluation.etudiant.MoyenneBac|number_format(2, '.', ',') }}</td>
                <td style="width:120px; {{color}} text-align: center;font-weight: 800">
                    {% if etab == "ISITS" %}
                        {% if ConcoursEvaluation.listISITS == 1 %}
                            LISTE PRINCIPALE
                        {% elseif ConcoursEvaluation.listISITS == 2 %}
                            LISTE D'ATTENTE
                        {% elseif ConcoursEvaluation.listISITS == 3 %}
                            NON ADMIS
                        {% endif %}
                    {% elseif etab == "FASIMH" %}
                        {% if ConcoursEvaluation.listFASIMH == 1 %}
                            LISTE PRINCIPALE
                        {% elseif ConcoursEvaluation.listFASIMH == 2 %}
                            LISTE D'ATTENTE
                        {% elseif ConcoursEvaluation.listFASIMH == 3 %}
                            NON ADMIS
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>


